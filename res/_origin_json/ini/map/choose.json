{
    "node": {
        "@cascadeopacity": "yes",
        "@name": "choose",
        "@pos": "frame:0.5x0.5",
        "@type": "layerext",
        "@visible": "no",
        "actions": {
            "action": [
                {
                    "@name": "appearance",
                    "@value": "Sequence[MoveBy[0.0,0,-300],Show[],BackOut[MoveBy[0.5,0,300]]]"
                },
                {
                    "@name": "disappearance",
                    "@value": "Sequence[BackIn[MoveBy[0.3,0,-300]],RemoveSelf[]]"
                },
                {
                    "@name": "fadein",
                    "@value": "FadeIn[0.5]"
                },
                {
                    "@name": "fadeout",
                    "@value": "FadeIn[0.2]"
                }
            ]
        },
        "children": {
            "node": [
                {
                    "@name": "normal",
                    "@pos": "-300x0",
                    "@template": "ini/map/choose_item.xml",
                    "children": {
                        "node": [
                            {
                                "@image": "choose::win_normal_diff.png",
                                "@path": "bg"
                            },
                            {
                                "@path": "caption_text",
                                "@text": "#gamechoose_normal#"
                            },
                            {
                                "@callback": "pushgame_normalmode",
                                "@path": "menu/game"
                            },
                            {
                                "@callback": "pushgame_normalmode",
                                "@path": "menu/game_withfuel"
                            },
                            {
                                "@path": "menu/game_withfuel/normal/text",
                                "@text": "##cost_normalmode##"
                            },
                            {
                                "@path": "gold/text",
                                "@text": "##gold_normalmode##"
                            },
                            {
                                "@path": "gear/text",
                                "@text": "##gear_normalmode##"
                            },
                            {
                                "@path": "waves/text",
                                "@text": "##waves_normalmode##"
                            },
                            {
                                "@path": "exclude/text",
                                "@text": ""
                            },
                            {
                                "@path": "exclude/icon",
                                "@visible": "no"
                            },
                            {
                                "@path": "lives/text",
                                "@text": "##lives_normalmode##"
                            }
                        ]
                    }
                },
                {
                    "@name": "hard",
                    "@pos": "300x0",
                    "@template": "ini/map/choose_item.xml",
                    "children": {
                        "node": [
                            {
                                "@image": "choose::win_hard_diff.png",
                                "@path": "bg"
                            },
                            {
                                "@path": "caption_text",
                                "@text": "#gamechoose_hard#"
                            },
                            {
                                "@callback": "pushgame_hardmode",
                                "@path": "menu/game"
                            },
                            {
                                "@callback": "pushgame_hardmode",
                                "@path": "menu/game_withfuel"
                            },
                            {
                                "@path": "menu/game_withfuel/normal/text",
                                "@text": "##cost_hardmode##"
                            },
                            {
                                "@path": "gold/text",
                                "@text": "##gold_hardmode##"
                            },
                            {
                                "@path": "gear/text",
                                "@text": "##gear_hardmode##"
                            },
                            {
                                "@path": "waves/text",
                                "@text": "##waves_hardmode##"
                            },
                            {
                                "@path": "exclude/text",
                                "@text": "##exclude_hardmode##"
                            },
                            {
                                "@path": "lives/text",
                                "@text": "##lives_hardmode##"
                            }
                        ]
                    }
                },
                {
                    "@color": "808080",
                    "@name": "hard_lock",
                    "@pos": "300x0",
                    "@template": "ini/map/choose_item.xml",
                    "@visible": "no",
                    "children": {
                        "node": [
                            {
                                "@image": "choose::win_hard_diff.png",
                                "@path": "bg"
                            },
                            {
                                "@color": "808080",
                                "@path": "caption_text",
                                "@text": "#gamechoose_hard#"
                            },
                            {
                                "@name": "dummy",
                                "@type": "node",
                                "children": {
                                    "node": [
                                        {
                                            "@image": "choose::lock2.png",
                                            "@path": "lock",
                                            "@pos": "0x38",
                                            "@scale": "1.2x1.2",
                                            "@type": "sprite"
                                        },
                                        {
                                            "@center": "0.5x0.5",
                                            "@color": "74C4DF",
                                            "@font": "fonts/helvetica.fnt",
                                            "@name": "text",
                                            "@pos": "0x-125",
                                            "@scale": "0.6x0.6",
                                            "@text": "#gamechoose_hardmode_locked#",
                                            "@textalign": "center",
                                            "@textwidth": "350",
                                            "@type": "text"
                                        }
                                    ]
                                }
                            },
                            {
                                "@path": "reward_text",
                                "@visible": "no"
                            },
                            {
                                "@path": "menu/game",
                                "@visible": "no"
                            },
                            {
                                "@path": "menu/game_withfuel",
                                "@visible": "no"
                            },
                            {
                                "@path": "waves/caption",
                                "@text": ""
                            },
                            {
                                "@path": "lives/caption",
                                "@text": ""
                            },
                            {
                                "@path": "gold/icon",
                                "@visible": "no"
                            }
                        ]
                    }
                },
                {
                    "@cascadeopacity": "yes",
                    "@name": "preview",
                    "@pos": "0x0",
                    "@type": "node",
                    "children": {
                        "node": [
                            {
                                "@image": "choose::win_for_level2.png",
                                "@name": "frame",
                                "@pos": "0x40",
                                "@type": "sprite"
                            },
                            {
                                "@font": "fonts/titlefont.fnt",
                                "@name": "caption",
                                "@pos": "0x175",
                                "@scale": "0.6x0.6",
                                "@strech": "230x60:min",
                                "@text": "##preview_caption##",
                                "@type": "text"
                            }
                        ]
                    }
                },
                {
                    "@name": "leaderboard",
                    "@pos": "0x-100",
                    "@type": "menu",
                    "children": {
                        "node": {
                            "@callback": "leaderboard_level",
                            "@font": "fonts/mdefensefont.fnt",
                            "@imageN": "images/map/leaderboard.png",
                            "@name": "open",
                            "@pos": "0x-70",
                            "@sound": "##sound_button##",
                            "@text": "#leaderboard#",
                            "@type": "menuitem",
                            "children": {
                                "node": {
                                    "@path": "normal/text",
                                    "@pos": "95x25",
                                    "@strech": "160x21:min"
                                }
                            }
                        }
                    }
                }
            ]
        },
        "events": {
            "eventlist": [
                {
                    "@name": "onenter",
                    "runaction": [
                        {
                            "@action": "appearance"
                        },
                        {
                            "@action": "fadein"
                        }
                    ],
                    "setproperty": {
                        "@property": "opacity",
                        "@value": "0"
                    }
                },
                {
                    "@name": "onexit",
                    "runaction": [
                        {
                            "@action": "disappearance"
                        },
                        {
                            "@action": "fadeout"
                        }
                    ]
                }
            ]
        },
        "paramcollection": {
            "pathto_leaderboards": "leaderboard"
        }
    }
}