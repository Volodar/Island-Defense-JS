{
    "node": {
        "@pos": "frame:0.5x0.5",
        "@template": "ini/tutorial/template_window.xml",
        "actions": {
            "action": [
                {
                    "@name": "fadein",
                    "@value": "FadeTo[0.25,255]"
                },
                {
                    "@name": "scale",
                    "@value": "ScaleTo[0.2,1,1]"
                }
            ]
        },
        "children": {
            "node": {
                "@cascadeopacity": "yes",
                "@name": "body",
                "@opacity": "255",
                "@scale": "0.8x0.8",
                "@type": "node",
                "children": {
                    "node": [
                        {
                            "@image": "images/tutorial/tut2.png",
                            "@name": "bg",
                            "@type": "sprite"
                        },
                        {
                            "@center": "0x0.5",
                            "@font": "fonts/helvetica.fnt",
                            "@name": "text",
                            "@pos": "-100x20",
                            "@scale": "0.7x0.7",
                            "@text": "#exit_from_game#",
                            "@textalign": "left",
                            "@textwidth": "420",
                            "@type": "text"
                        },
                        {
                            "@name": "menu",
                            "@pos": "0x0",
                            "@type": "menu",
                            "children": {
                                "node": [
                                    {
                                        "@callback": "yes",
                                        "@imageN": "images/tutorial/yes.png",
                                        "@name": "yes",
                                        "@pos": "10x-88",
                                        "@sound": "##sound_button##",
                                        "@type": "menuitem",
                                        "children": {
                                            "node": {
                                                "@center": "0.5x0.5",
                                                "@font": "fonts/mdefensefont2.fnt",
                                                "@name": "yes_text",
                                                "@pos": "70x40",
                                                "@scale": "0.7x0.7",
                                                "@text": "#Yes#",
                                                "@type": "text",
                                                "@visible": "yes",
                                                "@z": "2"
                                            }
                                        }
                                    },
                                    {
                                        "@callback": "no",
                                        "@imageN": "images/tutorial/no.png",
                                        "@name": "no",
                                        "@pos": "220x-90",
                                        "@sound": "##sound_button##",
                                        "@type": "menuitem",
                                        "children": {
                                            "node": {
                                                "@center": "0.5x0.5",
                                                "@font": "fonts/mdefensefont2.fnt",
                                                "@name": "no_text",
                                                "@pos": "114x44",
                                                "@scale": "0.7x0.7",
                                                "@text": "#No#",
                                                "@type": "text",
                                                "@visible": "yes",
                                                "@z": "2"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        },
        "events": {
            "eventlist": [
                {
                    "@name": "onenter",
                    "runaction": [
                        {
                            "@action": "fadein",
                            "@target": "body"
                        },
                        {
                            "@action": "scale",
                            "@target": "body"
                        }
                    ]
                },
                {
                    "@name": "onexit"
                }
            ]
        }
    }
}