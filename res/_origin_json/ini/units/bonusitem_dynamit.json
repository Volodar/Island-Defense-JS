{
    "tower": {
        "@name": "bonusitem_dynamit",
        "@sectorangle": "360",
        "@damagebysector": "yes",
        "@unittype": "tower",
        "@allowmenu": "no",
        "@radius": "35",
        "@allowtargets": "earth,sea",
        "@unitlayer": "any",
        "@maxlevel": "1",
        "effects": {
            "positive": {
                "@damage": "10000"
            }
        },
        "children": {
            "node": [
                {
                    "@image": "",
                    "@animation": "Sequence[Spawn[EaseOut[MoveTo[0.2,0,70],3],RotateBy[0.2,180]],Spawn[EaseIn[MoveTo[0.2,0,0],3],RotateBy[0.2,180]]]",
                    "@type": "sprite",
                    "@name": "skin",
                    "@center": "0.5x0.5"
                },
				{
                    "@name": "health_indicator",
                    "@scale": "0x0"
                }
            ]
        },
        "actions": {
            "action": [
                {
                    "@name": "animate_nothing",
                    "@value": "RepeatForever[Animate[0.3,[folder:dynamit::,indexes:dynamite_00.png,01:08]]]"
                },
                {
                    "@name": "animate_die",
                    "@value": "Animate[0.5,[folder:hero_mine::mine/,indexes:hero1_diesmoke_00.png,01:12]]"
                }
            ]
        },
        "events": {
            "eventlist": [
                {
                    "@name": "on_die",
                    "stopallaction": {
                        "@target": "skin"
                    },
                    "runaction": {
                        "@action": "animate_die",
                        "@target": "skin"
                    },
                    "areadamage": {
                        "@asunittype": "tower",
                        "@radius": "100"
                    }
                },
                {
                    "@name": "on_charging",
                    "runaction": {
                        "@action": "animate_nothing",
                        "@target": "skin"
                    },
                    "playsound": {
                        "@sound": "##sound_bonusitem_dinamyte##"
                    }
                },
                {
                    "@name": "onselect",
                    "setproperty": {
                        "@property": "visible",
                        "@target": "menu",
                        "@value": "yes"
                    }
                },
                {
                    "@name": "ondeselect",
                    "setproperty": {
                        "@property": "visible",
                        "@target": "menu",
                        "@value": "no"
                    }
                }
            ]
        },
        "machine_unit": {
            "@start_state": "charging",
            "transitions": {
                "charging": {
                    "@ready": "death"
                },
                "stop": {
                    "@die": "death"
                },
                "death": {
                    "@stop": "stop"
                }
            },
            "params": {
                "state_death": {
                    "@duration": "0.5"
                },
                "state_charging": {
                    "@duration": "1"
                }
            }
        },
        "paramcollection": {
            "showmenu": "no"
        }
    }
}