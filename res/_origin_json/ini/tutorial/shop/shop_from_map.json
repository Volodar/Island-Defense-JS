{
    "tutorial": {
        "@parent": "/maplayer",
        "actions": {
            "action": [
                {
                    "@name": "scaling",
                    "@value": "RepeatForever[EaseInOut[Sequence[DelayTime[0.5],ScaleTo[0.5,1.1,1.1],ScaleTo[0.5,1,1]],3]]"
                },
                {
                    "@name": "body",
                    "@value": "RepeatForever[EaseInOut[Sequence[MoveBy[0.5,0,-10],MoveBy[0.5,0,10]],3]]"
                },
                {
                    "@name": "bodyfadein",
                    "@value": "Sequence[DelayTime[0.5],FadeTo[0.3,255]]"
                }
            ]
        },
        "children": {
            "node": [
                {
                    "@name": "body",
                    "@pos": "frame:0.5x0.5",
                    "@type": "node",
                    "children": {
                        "node": [
                            {
                                "@image": "images/tutorial/tut2.png",
                                "@name": "bg",
                                "@type": "sprite"
                            },
                            {
                                "@center": "0x0.5",
                                "@font": "fonts/helvetica.fnt",
                                "@name": "text",
                                "@pos": "-110x00",
                                "@scale": "0.7x0.7",
                                "@text": "#tuturial_open_shop_haventfuel#",
                                "@textwidth": "420",
                                "@type": "text"
                            }
                        ]
                    }
                },
                {
                    "@cascadeopacity": "yes",
                    "@name": "baloon",
                    "@opacity": "0",
                    "@pos": "right:-210x75",
                    "@type": "node",
                    "children": {
                        "node": [
                            {
                                "@image": "images/tutorial/baloon1.png",
                                "@name": "bg",
                                "@pos": "0x110",
                                "@type": "sprite"
                            },
                            {
                                "@image": "images/tutorial/baloon1_1.png",
                                "@name": "arrow",
                                "@pos": "0x70",
                                "@type": "sprite",
                                "@z": "1"
                            },
                            {
                                "@color": "35352B",
                                "@font": "fonts/helvetica.fnt",
                                "@name": "text",
                                "@pos": "0x114",
                                "@scale": "0.7x0.7",
                                "@text": "#tuturial_openshop#",
                                "@type": "text"
                            }
                        ]
                    }
                }
            ]
        },
        "events": {
            "eventlist": [
                {
                    "@name": "onenter",
                    "action": {
                        "@action": "scaling",
                        "@state": "run",
                        "@target": "/maplayer/menu/shop"
                    },
                    "runaction": [
                        {
                            "@action": "body",
                            "@target": "baloon"
                        },
                        {
                            "@action": "bodyfadein",
                            "@target": "baloon"
                        }
                    ],
                    "setproperty": [
                        {
                            "@property": "visible",
                            "@target": "/maplayer/menu/shop",
                            "@value": "##PLATFORM_MOBILE##"
                        },
                        {
                            "@property": "visible",
                            "@target": "/maplayer/menu/back",
                            "@value": "no"
                        },
                        {
                            "@property": "visible",
                            "@target": "/scorelayer/menu/lab",
                            "@value": "no"
                        }
                    ]
                },
                {
                    "@name": "onexit",
                    "action": {
                        "@action": "scaling",
                        "@state": "stop",
                        "@target": "/maplayer/menu/shop"
                    },
                    "setproperty": [
                        {
                            "@property": "visible",
                            "@target": "/maplayer/menu/shop",
                            "@value": "##PLATFORM_MOBILE##"
                        },
                        {
                            "@property": "visible",
                            "@target": "/maplayer/menu/back",
                            "@value": "yes"
                        },
                        {
                            "@property": "visible",
                            "@target": "/scorelayer/menu/lab",
                            "@value": "yes"
                        },
                        {
                            "@property": "scale",
                            "@target": "/maplayer/menu/shop",
                            "@value": "1x1"
                        }
                    ]
                }
            ]
        }
    }
}