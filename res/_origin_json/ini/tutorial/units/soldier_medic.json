{
    "tutorial": {
        "@template": "ini/tutorial/units/template.xml",
        "children": {
            "node": [
                {
                    "@image": "images/tutorial/tut5_ground.png",
                    "@path": "body/bgtype"
                },
                {
                    "@path": "body/name",
                    "@text": "#medic_name#"
                },
                {
                    "@path": "body/caption",
                    "@text": "#medic_caption#"
                },
                {
                    "@path": "body/description",
                    "@pos": "-110x-75",
                    "@text": "#medic_desc#"
                },
                {
                    "@animation": "         RepeatForever         [           Sequence           [             ScaleTo[0,-1,1],             Spawn[MoveTo[0.6,-180,40],Animate[0.6,[folder:medic.left::,indexes:medik_run_00.png,01:20]]],             Animate[0.6,[folder:medic.fire::,indexes:medik_hill_00.png,01:20]],             ScaleTo[0,1,1],             Spawn[MoveTo[0.6,-240,40],Animate[0.6,[folder:medic.left::,indexes:medik_run_00.png,01:20]]],             Animate[0.6,[folder:medic.fire::,indexes:medik_hill_00.png,01:20]]           ]         ]         ",
                    "@path": "body/unit",
                    "@scale": "-1x1"
                }
            ]
        }
    }
}