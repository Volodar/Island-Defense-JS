{
    "tutorial": {
        "@template": "ini/tutorial/units/template.xml",
        "children": {
            "node": [
                {
                    "@image": "images/tutorial/tut5_ground.png",
                    "@path": "body/bgtype"
                },
                {
                    "@path": "body/name",
                    "@scale": "0.9x0.9",
                    "@text": "#bmp_name#"
                },
                {
                    "@path": "body/caption",
                    "@text": "#bmp_caption#"
                },
                {
                    "@path": "body/description",
                    "@text": "#bmp_desc#"
                },
                {
                    "@animation": "         RepeatForever         [           Sequence           [             ScaleTo[0,-1,1],             Spawn[MoveTo[0.4,-180,40],Animate[0.15,[folder:bmp::,indexes:bmp2_go_00.png,01:05]]],             Animate[0.5,[folder:bmp::,indexes:bmp2_fire_00.png,01:17]],             ScaleTo[0,1,1],             Spawn[MoveTo[0.4,-240,40],Animate[0.15,[folder:bmp::,indexes:bmp2_go_00.png,01:05]]],             Animate[0.5,[folder:bmp::,indexes:bmp2_fire_00.png,01:17]]           ]         ]         ",
                    "@path": "body/unit"
                }
            ]
        }
    }
}