{
    "UnitInfo": {
        "@name": "unitinfo",
        "@pos": "top:80x-280",
        "actions": {
            "action": {
                "@name": "scaling",
                "@value": "RepeatForever[EaseInOut[Sequence[DelayTime[0.5],ScaleTo[0.5,1.1,1.1],ScaleTo[0.5,1,1]],3]]"
            }
        },
        "children": {
            "node": {
                "@callback": "showinfo",
                "@imageN": "images/tutorial/newenemy.png",
                "@name": "icon",
                "@pos": "0x0",
                "@sound": "##sound_button##",
                "@type": "menuitem",
                "children": {
                    "node": {
                        "@center": "0.5x0.5",
                        "@font": "fonts/mdefensefont2.fnt",
                        "@name": "text",
                        "@pos": "44x20",
                        "@scale": "0.4x0.4",
                        "@text": "#tutorial_newenemy#",
                        "@type": "text",
                        "@visible": "yes",
                        "@z": "2"
                    }
                }
            }
        },
        "events": {
            "eventlist": {
                "@name": "oninit",
                "runaction": {
                    "@action": "scaling",
                    "@target": "icon"
                }
            }
        }
    }
}