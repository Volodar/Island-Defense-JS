{
    "tutorial": {
        "@closebytap": "yes",
        "@z": "999",
        "@pos": "frame:0.5x0.5",
        "@parent": "/selecthero",
        "@nexttutorial": "hero_showskillpoint",
        "children": {
            "node": [
                {
                    "@type": "node",
                    "@name": "body",
                    "children": {
                        "node": [
                            {
                                "@image": "images/tutorial/tut2.png",
                                "@type": "sprite",
                                "@name": "bg"
                            },
                            {
                                "@scale": "0.7x0.7",
                                "@name": "text",
                                "@text": "#tuturial_heroroom_showlevel#",
                                "@textwidth": "420",
                                "@pos": "-110x00",
                                "@font": "fonts/helvetica.fnt",
                                "@type": "text",
                                "@center": "0x0.5"
                            }
                        ]
                    }
                },
                {
                    "@opacity": "0",
                    "@pos": "-260x-260",
                    "@type": "node",
                    "@name": "baloon",
                    "@cascadeopacity": "yes",
                    "children": {
                        "node": {
                            "@scale": "1.5x1.5",
                            "@name": "arrow",
                            "@image": "images/tutorial/baloon1_1.png",
                            "@pos": "0x60",
                            "@z": "1",
                            "@type": "sprite",
                            "@center": "0.5x0"
                        }
                    }
                }
            ]
        },
        "actions": {
            "action": [
                {
                    "@name": "scaling",
                    "@value": "RepeatForever[EaseInOut[Sequence[DelayTime[0.5],ScaleTo[0.5,1.1,1.1],ScaleTo[0.5,1,1]],3]]"
                },
                {
                    "@name": "body",
                    "@value": "RepeatForever[EaseInOut[Sequence[MoveBy[0.5,0,-10],MoveBy[0.5,0,10]],3]]"
                },
                {
                    "@name": "bodyfadein",
                    "@value": "Sequence[DelayTime[0.5],FadeTo[0.3,255]]"
                }
            ]
        },
        "events": {
            "eventlist": [
                {
                    "@name": "onenter",
                    "runaction": [
                        {
                            "@action": "body",
                            "@target": "baloon"
                        },
                        {
                            "@action": "bodyfadein",
                            "@target": "baloon"
                        }
                    ],
                    "action": [
                        {
                            "@action": "scaling",
                            "@state": "run",
                            "@target": "/selecthero/content/level_timer"
                        },
                        {
                            "@action": "scaling",
                            "@state": "run",
                            "@target": "/selecthero/content/level_timer_bg"
                        }
                    ]
                },
                {
                    "@name": "onexit",
                    "action": [
                        {
                            "@action": "scaling",
                            "@state": "stop",
                            "@target": "/selecthero/content/level_timer"
                        },
                        {
                            "@action": "scaling",
                            "@state": "stop",
                            "@target": "/selecthero/content/level_timer_bg"
                        }
                    ],
                    "setproperty": [
                        {
                            "@property": "scale",
                            "@target": "/selecthero/content/level_timer",
                            "@value": "1x1"
                        },
                        {
                            "@property": "scale",
                            "@target": "/selecthero/content/level_timer_bg",
                            "@value": "1x1"
                        }
                    ]
                }
            ]
        }
    }
}