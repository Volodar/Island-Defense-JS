{
    "tutorial": {
        "@closebytap": "yes",
        "@parent": "/gamelayer",
        "@pos": "0x0",
        "@z": "999",
        "actions": {
            "action": [
                {
                    "@name": "movex",
                    "@value": "RepeatForever[EaseInOut[Sequence[MoveBy[0.5,-10,0],MoveBy[0.5,10,0]],3]]"
                },
                {
                    "@name": "movey",
                    "@value": "RepeatForever[EaseInOut[Sequence[MoveBy[0.5,0,-10],MoveBy[0.5,0,10]],3]]"
                },
                {
                    "@name": "bodyfadein",
                    "@value": "Sequence[DelayTime[2.5],FadeTo[0.3,255]]"
                },
                {
                    "@name": "fadein",
                    "@value": "Spawn[FadeTo[0.2,255],ScaleTo[0.3,1,1]]"
                }
            ]
        },
        "children": {
            "node": [
                {
                    "@cascadeopacity": "yes",
                    "@name": "body",
                    "@opacity": "0",
                    "@pos": "frame:0.5x0.5",
                    "@scale": "0.7x0.7",
                    "@type": "node",
                    "children": {
                        "node": [
                            {
                                "@image": "images/tutorial/tut2.png",
                                "@name": "body",
                                "@type": "sprite"
                            },
                            {
                                "@center": "0x0.5",
                                "@font": "fonts/helvetica.fnt",
                                "@name": "text",
                                "@pos": "-110x00",
                                "@scale": "0.7x0.7",
                                "@text": "#tuturial_hero1#",
                                "@textwidth": "600",
                                "@type": "text"
                            }
                        ]
                    }
                },
                {
                    "@cascadeopacity": "yes",
                    "@name": "hero_ballon",
                    "@opacity": "0",
                    "@pos": "top:240x-160",
                    "@type": "node",
                    "children": {
                        "node": [
                            {
                                "@image": "images/tutorial/baloon1.png",
                                "@name": "bg",
                                "@type": "sprite"
                            },
                            {
                                "@image": "images/tutorial/baloon1_1.png",
                                "@name": "arrow",
                                "@pos": "-94x0",
                                "@rotation": "90",
                                "@type": "sprite",
                                "@z": "1"
                            },
                            {
                                "@color": "35352B",
                                "@font": "fonts/helvetica.fnt",
                                "@name": "text",
                                "@pos": "0x4",
                                "@scale": "0.7x0.7",
                                "@text": "#tuturial_hero1_icon#",
                                "@type": "text",
                                "@z": "2"
                            }
                        ]
                    }
                },
                {
                    "@cascadeopacity": "yes",
                    "@name": "skill_ballon",
                    "@opacity": "0",
                    "@pos": "235x150",
                    "@type": "node",
                    "children": {
                        "node": [
                            {
                                "@image": "images/tutorial/baloon1.png",
                                "@name": "bg",
                                "@type": "sprite"
                            },
                            {
                                "@image": "images/tutorial/baloon1_1.png",
                                "@name": "arrow",
                                "@pos": "0x-40",
                                "@type": "sprite",
                                "@z": "1"
                            },
                            {
                                "@color": "35352B",
                                "@font": "fonts/helvetica.fnt",
                                "@name": "text",
                                "@pos": "0x4",
                                "@scale": "0.7x0.7",
                                "@text": "#tuturial_hero1_skill#",
                                "@type": "text",
                                "@z": "2"
                            }
                        ]
                    }
                }
            ]
        },
        "events": {
            "eventlist": [
                {
                    "@name": "onenter",
                    "runaction": [
                        {
                            "@action": "movex",
                            "@target": "hero_ballon"
                        },
                        {
                            "@action": "bodyfadein",
                            "@target": "hero_ballon"
                        },
                        {
                            "@action": "movey",
                            "@target": "skill_ballon"
                        },
                        {
                            "@action": "bodyfadein",
                            "@target": "skill_ballon"
                        },
                        {
                            "@action": "fadein",
                            "@target": "body"
                        }
                    ]
                },
                {
                    "@name": "onexit",
                    "setproperty": {
                        "@property": "visible",
                        "@target": "/gamelayer/interface/waveicon/icon",
                        "@value": "yes"
                    }
                }
            ]
        }
    }
}