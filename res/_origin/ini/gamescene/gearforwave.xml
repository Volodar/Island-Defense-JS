<node name="score" type="node" cascadecolor="yes" cascadeopacity="yes" pos="##position##"
      animation=
      "
      Spawn
      [
        Sequence
        [
          EaseInOut[MoveBy[1.5,0,50],1],
          RemoveSelf[]
        ],
        Sequence
        [
          FadeIn[0.25],
          DelayTime[1],
          FadeOut[0.25]
        ]
      ]
      "
  >
  <children>
    <node name="icon" type="sprite" pos="0x0" image="images/gamescene/icon_gold1.png" center="0x0.5"
      animation="
        RepeatForever
        [
          Animate
          [
            0.5..0.6,
            [
              folder:,
              frames:
              images/gamescene/icon_gold1.png,
            ]
          ]
        ]"
      />
    <node name="text" type="text" pos="0x6" font="fonts/mdefensefont2.fnt" text="##scores##"  center="1x0.5" scale="0.5x0.5"/>
  </children>
</node>