<layer type="selecthero" name="selecthero" pos="frame:0.5x0.5" cascadeopacity="yes" scale="1.1x1.1" size="0x0" opacity="0">
  <children>
    <node name="bg" type="sprite" image="images/promo/bg.png" pos="0x0"/>
    <node name="points" type="bmlabel" font="fonts/mdefensefont2.fnt" text="#heroes_promo_caption#" pos="70x215" scale="1x1" center="0.5x0.5" color="FFFFFF"/>
    
    <node name="hero1" type="bmlabel" font="fonts/mdefensefont2.fnt" text="#heroes_promo_hero1#" pos="-300x-175" scale="1x1" center="0.5x0.5" color="FFFFFF"/>
    <node name="hero2" type="bmlabel" font="fonts/mdefensefont2.fnt" text="#heroes_promo_hero2#" pos="0x-175" scale="1x1" center="0.5x0.5" color="FFFFFF"/>
    <node name="hero3" type="bmlabel" font="fonts/mdefensefont2.fnt" text="#heroes_promo_hero3#" pos="305x-175" scale="1x1" center="0.5x0.5" color="FFFFFF"/>
    <node name="hero1_name" type="bmlabel" font="fonts/mdefensefont2.fnt" text="#heroname_0#" pos="-300x-110" scale="1x1" center="0.5x0.5" color="FFFFFF" opacity="192"/>
    <node name="hero2_name" type="bmlabel" font="fonts/mdefensefont2.fnt" text="#heroname_2#" pos="-5x-110" scale="1x1" center="0.5x0.5" color="FFFFFF" opacity="192"/>
    <node name="hero3_name" type="bmlabel" font="fonts/mdefensefont2.fnt" text="#heroname_1#" pos="305x-110" scale="1x1" center="0.5x0.5" color="FFFFFF" opacity="192"/>

    <node name="points" strech="500x50:min"/>
    <node name="hero1" strech="250x50:min" />
    <node name="hero2" strech="250x50:min" />
    <node name="hero3" strech="250x50:min" />
    <node name="hero1_name" strech="180x60:min" />
    <node name="hero2_name" strech="180x60:min" />
    <node name="hero3_name" strech="180x60:min" />

    <node name="menu" type="menu" pos="0x0">
      <children>

        <node name="buy" type="menuitem" imageN="heroroom::but_lvlup.png" pos="0x-255" callback="buy" visible="##USE_HEROROOM##">
          <children>
            <node name="normal">
              <children>
                <node name="cost" type="bmlabel" font="fonts/mdefensefont2.fnt" text="123456789" pos="75x35" scale="0.75x0.75" center="0.5x0.5" color="FFFFFF" strech="150x60:min"/>
              </children>
            </node>
          </children>
        </node>
        <node name="go" type="menuitem" imageN="heroroom::but_lvlup.png" pos="0x-255" callback="linktofullversion" font="fonts/mdefensefont2.fnt" text="#linktofullversion#" visible="##NOUSE_HEROROOM##">
          <children>
            <node path="normal/text" strech="140x60:min"/>
          </children>
        </node>
        <node name="close" type="menuitem" imageN="heroroom::button_x.png" pos="460x235" callback="close"/>

      </children>
    </node>
    
  </children>

  <actions>
    <action name="appearance" value="Spawn[ScaleTo[0.2,1,1],FadeIn[0.3]"/>
    <action name="disappearance" value="Sequence[Spawn[ScaleTo[0.2,1.2,1.2],FadeOut[0.2]],RemoveSelf[]"/>
  </actions>
  <events>
    <eventlist name="appearance">
      <runaction action="appearance"/>
    </eventlist>
    <eventlist name="disappearance">
      <runaction action="disappearance"/>
    </eventlist>
  </events>
</layer>