<tower 
      unittype="tower"
      name="firegun"
      radius="200"
      allowtargets="earth"
      damagebysector="yes"
      sectorangle="45"
      effect_on_shoot="type:fire"
      >
  <effects>
    <positive fireRate="20" fireTime="3"/>
  </effects>

  <machine_unit>
    <transitions>
      <sleep seetarget="readyfire"/>
      <readyfire notarget="waittarget"/>
      <readyfire charge="charging"/>
      <charging ready="readyfire"/>
      <waittarget seetarget="readyfire"/>
      <waittarget relax="waittarget"/>
    </transitions>
    <params>
      <state_readyfire charge_volume="5" delay="1.1"/>
      <state_waittarget duration="4"/>
      <state_charging duration="1"/>
    </params>
  </machine_unit>

  <machine_move>
    <transitions>
      <move stop="stop"/>
      <stop move="move"/>
    </transitions>
  </machine_move>

  <mover>
    <params>
      <allowangles value="45,135,225,315"/>
      <thresold value="45"/>
    </params>
  </mover>
  
  <children>
    <node type="sprite" name="skin" image="firegun.5.1::turret4_5_10001.png" center="0.5x0.4"/>
    <node type="sprite" name="fire" center="0.0x0.5" opacity="0"/>
