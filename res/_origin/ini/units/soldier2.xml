<tower
  maxlevel="5"
  unittype="creep" 
  name="soldier2"
  velocity="50" 
  health="150"
  unitlayer="earth"
  lifecost="1"
  color_fire="FF8080"
  color_ice="80FFFF"
  color_electro="FFFF80"
	radius="150"
  additionalzorder="-1"
  exp="2"
      >
  <effects>
    <positive armor="4" electroResist="9.5" damage="2" iceResist="5"/>
  </effects>

  <extraproperties
    electro_pos="0x15"
    electro_size="small"
    electro_scale="1"
    fire_pos="0x0"
    fire_scale="1.5"
    freezing_scale="0.2"
    />

<machine_unit start_state="stop">
	<transitions>
		<move stop="stop"/>
		<move die="death"/>
		<stop move="move"/>
		<stop die="death"/>
		<stop seetarget="readyfire"/>
    <stop notarget="move"/>
    <readyfire charge="readyfire"/>
		<readyfire notarget="move"/>
		<death stop="stop"/>
	</transitions>
	<params>
		<state_death duration="1"/>
		<state_readyfire charge_volume="99999" delay="1"/>
	</params>
</machine_unit>

  <mover>
    <params>
      <allowangles value="0,180,90,270"/>
      <thresold value="60"/>
    </params>
  </mover>

  <children>
    <node type="sprite" name="skin" visible="yes" center="0.5x0.2"/>
    <node name="health_indicator" pos="-18x31" z="1"/>
  </children>

  <actions>
    <action name="animateL" value="RepeatForever[Animate[0.5,[folder:soldier2.left::,frames:solder2_left0001.png,solder2_left0002.png,solder2_left0003.png,solder2_left0004.png,solder2_left0005.png,solder2_left0006.png,solder2_left0007.png,solder2_left0008.png,solder2_left0009.png,solder2_left0010.png,solder2_left0011.png,solder2_left0012.png,solder2_left0013.png,solder2_left0014.png,solder2_left0015.png]]]"/>
    <action name="animateD" value="RepeatForever[Animate[0.5,[folder:soldier2.up::,frames:solder2_front0001.png,solder2_front0002.png,solder2_front0003.png,solder2_front0004.png,solder2_front0005.png,solder2_front0006.png,solder2_front0007.png,solder2_front0008.png,solder2_front0009.png,solder2_front0010.png,solder2_front0011.png,solder2_front0012.png,solder2_front0013.png,solder2_front0014.png,solder2_front0015.png]]]"/>
    <action name="animateU" value="RepeatForever[Animate[0.5,[folder:soldier2.down::,frames:solder2_back0001.png,solder2_back0002.png,solder2_back0003.png,solder2_back0004.png,solder2_back0005.png,solder2_back0006.png,solder2_back0007.png,solder2_back0008.png,solder2_back0009.png,solder2_back0010.png,solder2_back0011.png,solder2_back0012.png,solder2_back0013.png,solder2_back0014.png,solder2_back0015.png]]]"/>
    <action name="animate_die" value="Animate[0.7,[folder:soldier2.die::,frames:solder2_death0001.png,solder2_death0002.png,solder2_death0003.png,solder2_death0004.png,solder2_death0005.png,solder2_death0006.png,solder2_death0007.png,solder2_death0008.png,solder2_death0009.png,solder2_death0010.png,solder2_death0011.png,solder2_death0012.png,solder2_death0013.png,solder2_death0014.png,solder2_death0015.png,solder2_death0016.png,solder2_death0017.png,solder2_death0018.png,solder2_death0019.png]]"/>
    <action name="animate_fire" value="Animate[0.7,[folder:soldier2.fire::,frames:solder2_fire_0001.png,solder2_fire_0002.png,solder2_fire_0003.png,solder2_fire_0004.png,solder2_fire_0005.png,solder2_fire_0006.png,solder2_fire_0007.png,solder2_fire_0008.png,solder2_fire_0009.png,solder2_fire_0010.png,solder2_fire_0011.png,solder2_fire_0012.png,solder2_fire_0013.png,solder2_fire_0014.png,solder2_fire_0015.png,solder2_fire_0016.png,solder2_fire_0017.png,solder2_fire_0018.png,solder2_fire_0019.png,solder2_fire_0020.png]]"/>
  </actions>

  <events>
	  <eventlist name="on_die">
		  <playsound sound="##sound_soldier_death2##"/>
		  <stopallaction target="skin"/>
		  <action action="animate_die" target="skin" state="run"/>
	  </eventlist>
	  
	  <eventlist name="on_shoot">
		  <playsound sound="##sound_soldier_shoot##"/>
		  <stopallaction target="skin"/>
		  <action action="animate_fire" target="skin" state="run"/>
	  </eventlist>
	  
	  <eventlist name="on_rotate180">
		  <setproperty property="scale" target="skin" value="1x1"/>
		  <stopallaction target="skin"/>
		  <action action="animateL" target="skin" state="run"/>
	  </eventlist>
	  
	  <eventlist name="on_rotate0">
		  <setproperty property="scale" target="skin" value="-1x1"/>
		  <stopallaction target="skin"/>
		  <action action="animateL" target="skin" state="run"/>
	  </eventlist>
	  
	  <eventlist name="on_rotate90">
		  <stopallaction target="skin"/>
		  <action action="animateD" target="skin" state="run"/>
	  </eventlist>
	  
	  <eventlist name="on_rotate270">
		  <stopallaction target="skin"/>
		  <action action="animateU" target="skin" state="run"/>
	  </eventlist>
  </events>

</tower>
