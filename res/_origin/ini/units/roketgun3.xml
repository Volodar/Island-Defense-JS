<tower maxlevel="5" 
       unittype="tower"
       name="roketgun"
       radius="290"
       effect_on_shoot="bullet"
       allowtargets="sky,sea"
       >
  <effects>
    <positive damage="7"/>
  </effects>

  <machine_unit>
    <transitions>
      <sleep seetarget="readyfire"/>
      <readyfire notarget="waittarget"/>
      <readyfire charge="charging"/>
      <charging ready="readyfire"/>
      <waittarget seetarget="readyfire"/>
      <waittarget relax="waittarget"/>
    </transitions>
    <params>
      <state_readyfire charge_volume="5" delay="0.1"/>
      <state_waittarget duration="3"/>
      <state_charging duration="1"/>
    </params>
  </machine_unit>

  <machine_move>
    <transitions>
      <move stop="stop"/>
      <stop move="move"/>
    </transitions>
  </machine_move>

  <mover>
    <params>
      <allowangles value="45,135,225,315"/>
      <thresold value="45"/>
    </params>
  </mover>
  

  <children>
    <node type="sprite" name="skin" image="roketgun.3.1::turret2_3_1stage0016.png" center="0.5x0.3"/>
  </children>

