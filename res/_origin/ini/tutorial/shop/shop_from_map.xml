<tutorial parent="/maplayer">
	<children>
    <node name="body" type="node" pos="frame:0.5x0.5">
      <children>
        <node name="bg" type="sprite" image="images/tutorial/tut2.png" />
      	<node name="text" type="text" font="fonts/helvetica.fnt" scale="0.7x0.7" pos="-110x00" textwidth="420" center="0x0.5" text="#tuturial_open_shop_haventfuel#" />
      </children>
    </node>
    <node name="baloon" type="node" cascadeopacity="yes" opacity="0" pos="right:-210x75">
      <children>
        <node name="bg" type="sprite" image="images/tutorial/baloon1.png" pos="0x110"/>
        <node name="arrow" type="sprite" image="images/tutorial/baloon1_1.png" z="1" pos="0x70"/>
        <node name="text" type="text" font="fonts/helvetica.fnt" text="#tuturial_openshop#" scale="0.7x0.7" color="35352B"  pos="0x114"/>
      </children>
    </node>
  </children>

  <actions>
    <action name="scaling" value="RepeatForever[EaseInOut[Sequence[DelayTime[0.5],ScaleTo[0.5,1.1,1.1],ScaleTo[0.5,1,1]],3]]"/>
    <action name="body" value="RepeatForever[EaseInOut[Sequence[MoveBy[0.5,0,-10],MoveBy[0.5,0,10]],3]]"/>
    <action name="bodyfadein" value="Sequence[DelayTime[0.5],FadeTo[0.3,255]]"/>
  </actions>

  <events>
    <eventlist name="onenter">
      <runaction action="body" target="baloon"/>
      <runaction action="bodyfadein" target="baloon"/>

      <setproperty target="/maplayer/menu/shop" property="visible" value="##PLATFORM_MOBILE##"/>
      <setproperty target="/maplayer/menu/back" property="visible" value="no"/>
      <setproperty target="/scorelayer/menu/lab" property="visible" value="no"/>
      <action action="scaling" target="/maplayer/menu/shop" state="run"/>
    </eventlist>
    <eventlist name="onexit">
      <setproperty target="/maplayer/menu/shop" property="visible" value="##PLATFORM_MOBILE##"/>
      <setproperty target="/maplayer/menu/back" property="visible" value="yes"/>
      <setproperty target="/scorelayer/menu/lab" property="visible" value="yes"/>

      <action action="scaling" target="/maplayer/menu/shop" state="stop"/>
      <setproperty target="/maplayer/menu/shop" property="scale" value="1x1"/>
    </eventlist>
  </events>

</tutorial>