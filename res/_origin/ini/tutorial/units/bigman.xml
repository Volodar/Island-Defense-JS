<tutorial template="ini/tutorial/units/template.xml">
  <children>
    <node path="body/bgtype" image="images/tutorial/tut5_ground.png"/>
    <node path="body/name" text="#bigman_name#"/>
    <node path="body/caption" text="#bigman_caption#"/>
    <node path="body/description" text="#bigman_desc#"/>
    <node path="body/unit" animation="
        RepeatForever
        [
          Sequence
          [
            ScaleTo[0,-1,1],
            Spawn[MoveTo[0.5,-190,20],Animate[0.5,[folder:bigman::left/,indexes:bigman1_go_00.png,01:17]]],
            Animate[0.5,[folder:bigman::fire/,indexes:bigman1_fire_00.png,01:17]],
            ScaleTo[0,1,1],
            Spawn[MoveTo[0.5,-230,20],Animate[0.5,[folder:bigman::left/,indexes:bigman1_go_00.png,01:17]]],
            Animate[0.5,[folder:bigman::fire/,indexes:bigman1_fire_00.png,01:17]]
          ]
        ]
        " pos="-210x20"/>
  </children>
</tutorial>