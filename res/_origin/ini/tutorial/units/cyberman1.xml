<tutorial template="ini/tutorial/units/template.xml">
  <children>
    <node path="body/bgtype" image="images/tutorial/tut5_ground.png"/>
    <node path="body/name" text="#cyberman1_name#"/>
    <node path="body/caption" text="#cyberman1_caption#"/>
    <node path="body/description" text="#cyberman1_desc#" pos="-110x-75"/>
    
  <node path="body/unit" scale="-1x1" animation="
        RepeatForever
        [
          Sequence
          [
            ScaleTo[0,-1,1],
            Spawn[MoveTo[0.5,-180,40],Animate[0.5,[folder:cyberman1::left/,indexes:cyberman1_run_00.png,01:16]]],
            Animate[0.5,[folder:cyberman1::fire/,indexes:cyberman1_fire_00.png,01:16]],
            ScaleTo[0,1,1],
            Spawn[MoveTo[0.5,-240,40],Animate[0.5,[folder:cyberman1::left/,indexes:cyberman1_run_00.png,01:16]]],
            Animate[0.5,[folder:cyberman1::fire/,indexes:cyberman1_fire_00.png,01:16]]
          ]
        ]
        "/>
  </children>
</tutorial>